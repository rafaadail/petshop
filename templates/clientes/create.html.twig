{% extends 'base.html.twig' %}

{% block title %}Cadastrar Cliente - {% endblock %}

{% block body %}
    <h1>Cadastrar Cliente</h1>
    <hr>
    {#{{ form(form) }}#}

    {{ form_start(form) }}
    <div class="form-group row">
        <div class="col-md-6">
            {{ form_label(form.nome) }}
            {{ form_widget(form.nome) }}
            {{ form_errors(form.nome) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.telefone) }}
            {{ form_widget(form.telefone) }}
            {{ form_errors(form.telefone) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.endereco.rua) }}
            {{ form_widget(form.endereco.rua) }}
            {{ form_errors(form.endereco.rua) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.endereco.numero) }}
            {{ form_widget(form.endereco.numero) }}
            {{ form_errors(form.endereco.numero) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.endereco.bairro) }}
            {{ form_widget(form.endereco.bairro) }}
            {{ form_errors(form.endereco.bairro) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.animal) }}
            {{ form_widget(form.animal) }}
            {{ form_errors(form.animal) }}
        </div>
    </div>
    {{ form_widget(form.salvar) }}
{% endblock %}



